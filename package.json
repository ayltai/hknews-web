{
    "name": "hknews-web",
    "description": "Serves aggregated news from 10+ local news publishers in Hong Kong. Made with ❤",
    "version": "1.0.0",
    "author": "Alan Tai",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ayltai/hknews-web.git"
    },
    "bugs": {
        "url": "https://github.com/ayltai/hknews-web/issues"
    },
    "homepage": "https://hknews.dev/",
    "license": "Apache-2.0",
    "keywords": [
        "news",
        "newspaper",
        "hknews"
    ],
    "scripts": {
        "check": "./node_modules/.bin/stylelint src/**/*.css public/**/*.css !build/** && ./node_modules/.bin/tslint --project tsconfig.json src/**/*.{ts,tsx}",
        "codacy": "cat ./coverage/lcov.info | ./node_modules/.bin/codacy-coverage",
        "codecov": "./node_modules/.bin/codecov",
        "serve": "./node_modules/.bin/serve -s build",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --ci --no-watchman --coverage --coverageDirectory=coverage --forceExit",
        "eject": "react-scripts eject"
    },
    "dependencies": {
        "@material-ui/core": "^4.8.2",
        "@material-ui/icons": "^4.5.1",
        "@material-ui/styles": "^4.8.2",
        "ra-i18n-polyglot": "^3.1.1",
        "react": "^16.12.0",
        "react-admin": "^3.1.1",
        "react-dom": "^16.12.0",
        "react-image-lightbox": "^5.1.1",
        "react-scripts": "^3.3.0",
        "react-timeago": "^4.4.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.4.0",
        "@testing-library/user-event": "^8.0.2",
        "codacy-coverage": "^3.4.0",
        "codecov": "^3.6.1",
        "enzyme": "^3.11.0",
        "enzyme-adapter-react-16": "^1.15.2",
        "serve": "^11.3.0",
        "stylelint": "^12.0.1",
        "stylelint-config-standard": "^19.0.0"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
